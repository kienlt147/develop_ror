<div class="starter-template">
    <h1>Create Categories</h1>
    <%= form_for :categories, url: categories_path do |f| %>
        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control', value: @category.name, placeholder: 'Enter category name...' %>
        </div>
        <div class="form-group">
            <%= f.label :status %>
            <%= f.select :status, [['Active',1],['Inactive', 2]], {}, :class => 'form-control', :selected => @category.status %>
            <% f.collection_select(:city_id, Category.all, :id, :name) %>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    <% end %>
</div>